---
// import Button from "../utilities/Button.astro"
---

<div class="slide-in-left rounded-lg bg-blue-50 p-8">
  <h3 class="text-ibwt-primary mb-6 text-xl font-bold">Envianos un mensaje</h3>

  <form class="space-y-4">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div class="space-y-2">
        <label
          for="name"
          class="text-sm font-medium"
          >Nombre</label
        >
        <input
          id="name"
          placeholder="Escribe tu nombre aquí..."
          class="w-full rounded-md border border-gray-300 px-3 py-2"
        />
      </div>

      <div class="space-y-2">
        <label
          for="email"
          class="text-sm font-medium"
          >Correo electrónico</label
        >
        <input
          id="email"
          type="email"
          placeholder="Escribe tu correo electrónico aquí..."
          class="w-full rounded-md border border-gray-300 px-3 py-2"
        />
      </div>
    </div>

    <div class="space-y-2">
      <label
        for="subject"
        class="text-sm font-medium"
      >
        Asunto</label
      >
      <input
        id="subject"
        placeholder="Escribe tu asunto aquí..."
        class="w-full rounded-md border border-gray-300 px-3 py-2"
      />
    </div>

    <div class="space-y-2">
      <label
        for="message"
        class="text-sm font-medium"
        >Mensaje</label
      >
      <textarea
        id="message"
        placeholder="Escribe tu mensaje aquí..."
        rows="5"
        class="w-full rounded-md border border-gray-300 px-3 py-2"
      ></textarea>
    </div>

    <div class="flex justify-end">
      <!-- <Button
        type="submit"
        className="bg-ibwt-secondary px-4 py-2 text-white"
        >Enviar mensaje</Button
      > -->
    </div>
  </form>
</div>
