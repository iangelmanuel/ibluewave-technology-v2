---
import ButtonPrimary from "@components/utilities/ButtonPrimary.astro"

interface Props {
  isContactPage?: boolean
}

const { isContactPage = false } = Astro.props
---

<div
  class:list={[
    "rounded-lg p-8",
    !isContactPage
      ? "slide-in-left bg-blue-50"
      : "scroll-fade-in-up border shadow-lg"
  ]}
>
  {
    !isContactPage ? (
      <h3
        text-gray-700
        class="text-ibwt-primary mb-6 text-xl font-bold"
      >
        Envíenos un mensaje
      </h3>
    ) : (
      <>
        <h2 class="text-ibwt-primary mb-6 text-3xl font-bold">
          Envíenos un Mensaje
        </h2>
        <p class="mb-8 text-gray-700">
          Completa el formulario a continuación y nos pondremos en contacto
          contigo lo antes posible.
        </p>
      </>
    )
  }

  <form class="space-y-4">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div class="space-y-2">
        <label
          for="name"
          class="text-sm font-medium text-gray-700"
          >Nombre</label
        >
        <input
          id="name"
          placeholder="Escribe tu nombre aquí..."
          class="w-full rounded-md border border-gray-300 px-3 py-2"
        />
      </div>

      <div class="space-y-2">
        <label
          for="email"
          class="text-sm font-medium text-gray-700"
          >Correo electrónico</label
        >
        <input
          id="email"
          type="email"
          placeholder="Escribe tu correo electrónico aquí..."
          class="w-full rounded-md border border-gray-300 px-3 py-2"
        />
      </div>
    </div>

    <div class="space-y-2">
      <label
        for="subject"
        class="text-sm font-medium text-gray-700"
      >
        Asunto</label
      >
      <input
        id="subject"
        placeholder="Escribe tu asunto aquí..."
        class="w-full rounded-md border border-gray-300 px-3 py-2"
      />
    </div>

    <div class="space-y-2">
      <label
        for="message"
        class="text-sm font-medium text-gray-700"
        >Mensaje</label
      >
      <textarea
        id="message"
        placeholder="Escribe tu mensaje aquí..."
        rows="5"
        class="w-full rounded-md border border-gray-300 px-3 py-2"
      ></textarea>
    </div>

    <div class="flex justify-end">
      <ButtonPrimary className="bg-ibwt-secondary px-4 py-2 text-white"
        >Enviar mensaje</ButtonPrimary
      >
    </div>
  </form>
</div>
