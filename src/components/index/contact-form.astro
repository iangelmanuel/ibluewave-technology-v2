---
import Button from "@components/utilities/button.astro"
---

<div class="bg-blue-50 p-8 rounded-lg slide-in-left">
  <h3 class="text-xl font-bold text-ibwt-primary mb-6">Envianos un mensaje</h3>

  <form class="space-y-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="space-y-2">
        <label
          for="name"
          class="text-sm font-medium"
          >Nombre</label
        >
        <input
          id="name"
          placeholder="Escribe tu nombre aquí..."
          class="w-full px-3 py-2 border border-gray-300 rounded-md"
        />
      </div>

      <div class="space-y-2">
        <label
          for="email"
          class="text-sm font-medium"
          >Correo electrónico</label
        >
        <input
          id="email"
          type="email"
          placeholder="Escribe tu correo electrónico aquí..."
          class="w-full px-3 py-2 border border-gray-300 rounded-md"
        />
      </div>
    </div>

    <div class="space-y-2">
      <label
        for="subject"
        class="text-sm font-medium"
      >
        Asunto</label
      >
      <input
        id="subject"
        placeholder="Escribe tu asunto aquí..."
        class="w-full px-3 py-2 border border-gray-300 rounded-md"
      />
    </div>

    <div class="space-y-2">
      <label
        for="message"
        class="text-sm font-medium"
        >Mensaje</label
      >
      <textarea
        id="message"
        placeholder="Escribe tu mensaje aquí..."
        rows="5"
        class="w-full px-3 py-2 border border-gray-300 rounded-md"
      ></textarea>
    </div>

    <div class="flex justify-end">
      <Button
        type="submit"
        className="px-4 py-2 bg-ibwt-secondary text-white"
        >Enviar mensaje</Button
      >
    </div>
  </form>
</div>

