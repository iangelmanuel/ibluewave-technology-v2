---
import SocialMedia from "./social-media.astro"
import { siteInfo } from "@constant/site-info"

const { address, phone, email } = siteInfo
---

<div>
  <h3 class="text-xl font-bold text-ibwt-primary mb-6">
    Información de contacto
  </h3>

  <div class="space-y-6">
    <div class="flex items-start">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="h-5 w-5 text-ibwt-secondary mt-1 mr-3"
      >
        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
        <circle
          cx="12"
          cy="10"
          r="3"
        ></circle>
      </svg>

      <div>
        <h4 class="font-medium">Dirección</h4>
        <p class="text-gray-600 mt-1">{address}</p>
      </div>
    </div>

    <div class="flex items-start">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="h-5 w-5 text-ibwt-secondary mt-1 mr-3"
      >
        <path
          d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
        ></path>
      </svg>
      <div>
        <h4 class="font-medium">Número de télefono</h4>
        <p class="text-gray-600 mt-1">{phone}</p>
      </div>
    </div>

    <div class="flex items-start">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="h-5 w-5 text-ibwt-secondary mt-1 mr-3"
      >
        <rect
          width="20"
          height="16"
          x="2"
          y="4"
          rx="2"
        ></rect>
        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
      </svg>
      <div>
        <h4 class="font-medium">Correo electrónico</h4>
        <a
          href={`mailto:${email}`}
          class="text-gray-600 hover:text-ibwt-primary hover:underline mt-1"
          >{email}</a
        >
      </div>
    </div>
  </div>

  <SocialMedia />

  <div class="mt-8 rounded-lg overflow-hidden h-[300px] bg-gray-200">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3916.4087496484285!2d-74.83992132394316!3d11.007927489155213!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8ef42d2ae20f06f5%3A0x5cbb25b1ee456bee!2sTv.%2044%20%23102-167%2C%20Nte.%20Centro%20Historico%2C%20Barranquilla%2C%20Atl%C3%A1ntico!5e0!3m2!1sen!2sco!4v1744582119040!5m2!1sen!2sco"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      class="w-full h-full"
    ></iframe>
  </div>
</div>
