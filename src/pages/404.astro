    </div>

    <div
      class="animate-float-slow absolute top-2/3 left-1/4 h-10 w-16"
      style="animation-delay: -2s;"
    >
      <svg
        viewBox="0 0 200 100"
        xmlns="http://www.w3.org/2000/svg"
        class="h-full w-full"
      >
        <path
          d="M40,50 C60,30 100,20 150,50 C100,80 60,70 40,50 Z"
          fill="#eab308"
          stroke="#ca8a04"
          stroke-width="2"
        ></path>
        <path
          d="M150,50 L180,30 L180,70 Z"
          fill="#eab308"
          stroke="#ca8a04"
          stroke-width="2"
        ></path>
        <circle
          cx="50"
          cy="45"
          r="5"
          fill="#000000"
        ></circle>
        <path
          d="M70,40 C80,45 80,55 70,60"
          fill="none"
          stroke="#ca8a04"
          stroke-width="2"
        ></path>
      </svg>
    </div>

    <div
      class="relative z-10 container mx-auto flex h-full flex-col items-center justify-center px-4 py-20"
    >
      <div class="text-center">
        <div class="relative mb-8">
          <h1 class="text-[150px] leading-none font-bold md:text-[200px]">
            <span class="text-ibwt-primary">4</span>
            <span class="text-ibwt-secondary">0</span>
            <span class="text-ibwt-primary">4</span>
          </h1>

          <div
            class="animate-float absolute top-1/2 left-1/2 h-32 w-32 -translate-x-1/2 -translate-y-1/2 transform"
          >
            <svg
              viewBox="0 0 200 200"
              xmlns="http://www.w3.org/2000/svg"
              class="h-full w-full"
            >
              <rect
                x="85"
                y="70"
                width="30"
                height="60"
                rx="5"
                fill="#64748b"
                stroke="#475569"
                stroke-width="2"
              ></rect>
              <rect
                x="90"
                y="65"
                width="20"
                height="10"
                rx="2"
                fill="#475569"
              ></rect>

              <ellipse
                cx="100"
                cy="100"
                rx="40"
                ry="45"
                fill="#0ea5e9"
                stroke="#0284c7"
                stroke-width="2"
              ></ellipse>

              <ellipse
                cx="100"
                cy="80"
                rx="25"
                ry="20"
                fill="#bae6fd"
                stroke="#0284c7"
                stroke-width="2"
              ></ellipse>
              <ellipse
                cx="100"
                cy="80"
                rx="20"
                ry="15"
                fill="#eff6ff"
                opacity="0.6"
              ></ellipse>

              <circle
                cx="100"
                cy="80"
                r="22"
                fill="none"
                stroke="#0284c7"
                stroke-width="3"
                stroke-dasharray="2 4"
              ></circle>

              <path
                d="M75,85 C65,90 60,100 65,110"
