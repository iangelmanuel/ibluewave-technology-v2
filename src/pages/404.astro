---
import Layout from "@layouts/Layout.astro"
import Link from "@components/utilities/Link.astro"
import LinkSecondary from "@components/utilities/LinkSecondary.astro"

import NoiseEffect from "@components/home-page/NoiseEffect.astro"
import BubblesEffect from "@components/home-page/BubblesEffect.astro"
import { Icon } from "astro-icon/components"
---

<Layout
  title="404 - Página no encontrada"
  description="Lo sentimos, la página que buscas no existe o ha sido movida."
>
  <section
