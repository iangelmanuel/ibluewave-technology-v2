---
import { Image } from "astro:assets"

import Link from "@components/utilities/Link.astro"
import LinkSecondary from "@components/utilities/LinkSecondary.astro"

import Bubble from "@components/index/BubblesEffect.astro"
import Noise from "@components/index/NoiseEffect.astro"

import HeroImage from "@images/hero-without-bg.webp"
---

<section class="relative bg-gradient-to-t from-blue-950 to-blue-700">
  <Noise />
  <Bubble />
  <article class="h-screen bg-gradient-to-r">
    <Image
      src={HeroImage}
      alt="Imagen de buceo"
      width={1600}
      height={800}
      class="absolute z-30 h-full w-full object-cover brightness-75"
    />
  </article>

  <article
    class="absolute top-1/2 left-1/2 z-40 container mx-auto flex h-[600px] -translate-x-1/2 -translate-y-1/2 flex-col justify-center text-center text-white"
  >
    <section
      class="mx-auto flex max-w-screen-2xl flex-col items-center justify-center"
    >
      <h1
        class="text-ibwt-secondary hero-title text-5xl font-bold tracking-tighter sm:text-5xl md:text-8xl"
      >
        Descubre el mundo submarino
      </h1>

      <p
        class="hero-paragraph mx-auto mt-4 max-w-[700px] text-lg text-white/90"
      >
        Experiencia única de buceo y tecnología innovadora. Aprende a bucear con
        nosotros y explora la belleza del océano.
      </p>
    </section>

    <section class="mt-8 flex items-center justify-center gap-4 sm:flex-row">
      <div class="hero-btn-primary">
        <Link
          href="/cursos-especiales"
          className="bg-ibwt-secondary px-6 py-3 text-white"
        >
          Explorar Cursos
        </Link>
      </div>

      <div class="hero-btn-secondary">
        <LinkSecondary
          href="#sobre-nosotros"
          className="border-white px-6 py-3 text-white hover:bg-white/10"
        >
          Saber más
        </LinkSecondary>
      </div>
    </section>
  </article>
</section>

<style>
  @keyframes heroTitleIn {
    0% {
      opacity: 0;
      transform: translateY(50px) scale(0.96);
      clip-path: inset(100% 0 0 0);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
      clip-path: inset(0 0 0 0);
    }
  }

  @keyframes heroParagraphIn {
    0% {
      opacity: 0;
      transform: translateY(40px) scale(0.97);
      clip-path: inset(100% 0 0 0);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
      clip-path: inset(0 0 0 0);
    }
  }

  @keyframes heroButtonLeftIn {
    0% {
      opacity: 0;
      transform: translateX(-40px) translateY(15px) scale(0.98);
      clip-path: inset(0 100% 0 0);
    }
    100% {
      opacity: 1;
      transform: translateX(0) translateY(0) scale(1);
      clip-path: inset(0 0 0 0);
    }
  }

  @keyframes heroButtonRightIn {
    0% {
      opacity: 0;
      transform: translateX(40px) translateY(15px) scale(0.98);
      clip-path: inset(0 0 0 100%);
    }
    100% {
      opacity: 1;
      transform: translateX(0) translateY(0) scale(1);
      clip-path: inset(0 0 0 0);
    }
  }

  .hero-title {
    opacity: 0;
    animation: heroTitleIn 1.2s cubic-bezier(0.23, 1, 0.32, 1) 0.3s forwards;
  }

  .hero-paragraph {
    opacity: 0;
    animation: heroParagraphIn 1.1s cubic-bezier(0.23, 1, 0.32, 1) 0.6s forwards;
  }

  .hero-btn-primary {
    opacity: 0;
    animation: heroButtonLeftIn 1s cubic-bezier(0.23, 1, 0.32, 1) 1s forwards;
  }

  .hero-btn-secondary {
    opacity: 0;
    display: inline-flex;
    overflow: hidden;
    will-change: opacity, transform, clip-path;
    animation: heroButtonRightIn 1s cubic-bezier(0.23, 1, 0.32, 1) 1.2s forwards;
  }
</style>
